---
layout: base
---

#columns
  #left-column
    .post
      %h1.title
        = page.title
      .byline
        .date
          %span.label
            Posted on:
          %span.value           
            = page.date.strftime('%A %B %e, %Y')
        .tags
          %span.label
            Tags: 
          - page.tags.each do |tag|
            %a{:href=>tag.primary_page.url}><
              = tag
            = ',&nbsp;' unless tag == page.tags.last  
      .body
        ~ content
      .comments
        = page.disqus_comments
  
  #right-column
    .post-navigation
      .previous
        - if page.previous_post
          .label
            previous
          %a{:href => page.previous_post.url}= page.previous_post.title
      .next
        - if page.next_post
          .label
            next
          %a{:href => page.next_post.url}= page.next_post.title
  
